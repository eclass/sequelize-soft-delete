{
  "name": "sequelize-soft-delete",
  "version": "1.0.1",
  "description": "Sequelize model plugin for add soft-delete method",
  "main": "src",
  "scripts": {
    "lint": "eslint --fix .",
    "format": "prettier-standard 'src/**/*.js'",
    "pretest": "npm run lint -s && npm run format -s",
    "test": "echo 'not test'",
    "commit": "commit",
    "semantic-release": "semantic-release"
  },
  "engines": {
    "node": ">=8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eclass/sequelize-soft-delete.git"
  },
  "keywords": [
    "sequelize",
    "soft-delete"
  ],
  "author": "Leonardo Gatica <lgatica@protonmail.com> (https://about.me/lgatica)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eclass/sequelize-soft-delete/issues"
  },
  "homepage": "https://github.com/eclass/sequelize-soft-delete#readme",
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "7.5.2",
    "@commitlint/config-conventional": "7.5.0",
    "@commitlint/prompt-cli": "7.5.0",
    "@semantic-release/changelog": "3.0.2",
    "@semantic-release/git": "7.0.8",
    "@semantic-release/github": "5.2.10",
    "@semantic-release/npm": "5.1.4",
    "eslint": "5.14.1",
    "eslint-config-jsdoc-strict": "2.0.0",
    "eslint-config-prettier": "4.1.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-jsdoc": "4.1.1",
    "eslint-plugin-node": "8.0.1",
    "eslint-plugin-promise": "4.0.1",
    "eslint-plugin-security": "1.4.0",
    "eslint-plugin-standard": "4.0.0",
    "husky": "1.3.1",
    "lint-staged": "8.1.4",
    "npm-github-config": "2.0.0",
    "prettier-standard": "8.0.1",
    "semantic-release": "15.13.3"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "standard",
      "jsdoc-strict",
      "plugin:promise/recommended",
      "plugin:security/recommended"
    ],
    "plugins": [
      "promise",
      "security"
    ],
    "rules": {
      "no-console": "error",
      "require-await": "error"
    }
  },
  "eslintIgnore": [
    "coverage"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "linters": {
      "src/**/*.js": [
        "eslint --fix",
        "prettier-standard",
        "git add"
      ]
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "renovate": {
    "automerge": "minor",
    "extends": [
      "config:js-lib"
    ]
  },
  "release": {
    "extends": "npm-github-config"
  }
}
