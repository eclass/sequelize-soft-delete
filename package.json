{
  "name": "sequelize-soft-delete",
  "version": "1.1.0",
  "description": "Sequelize model plugin for add soft-delete method",
  "main": "src",
  "types": "src/types.d.ts",
  "scripts": {
    "lint:js": "eslint . --fix",
    "format:js": "prettier-standard 'src/**/*.js'",
    "lint:ts": "tslint --project . --fix 'src/**/*.ts'",
    "format:ts": "prettier-standard 'src/**/*.ts'",
    "lint": "npm run lint:js && npm run lint:ts",
    "format": "npm run format:js && npm run format:ts",
    "test": "echo 'not test'",
    "commit": "commit",
    "semantic-release": "semantic-release",
    "ts-compile-check": "tsc -p tsconfig.json --noEmit"
  },
  "engines": {
    "node": ">=8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eclass/sequelize-soft-delete.git"
  },
  "keywords": [
    "sequelize",
    "soft-delete"
  ],
  "author": "Leonardo Gatica <lgatica@protonmail.com> (https://about.me/lgatica)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eclass/sequelize-soft-delete/issues"
  },
  "homepage": "https://github.com/eclass/sequelize-soft-delete#readme",
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "8.1.0",
    "@commitlint/config-conventional": "8.1.0",
    "@commitlint/prompt-cli": "8.1.0",
    "@semantic-release/changelog": "3.0.4",
    "@semantic-release/git": "7.0.16",
    "@semantic-release/github": "5.4.2",
    "@semantic-release/npm": "5.1.13",
    "@types/sequelize": "4.28.4",
    "eslint": "5.16.0",
    "eslint-config-jsdoc-strict": "2.0.0",
    "eslint-config-prettier": "4.3.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jsdoc": "8.7.0",
    "eslint-plugin-node": "9.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-security": "1.4.0",
    "eslint-plugin-standard": "4.0.1",
    "husky": "2.7.0",
    "jsdoc": "3.6.3",
    "lint-staged": "8.2.1",
    "npm-github-config": "2.0.0",
    "prettier-standard": "9.1.1",
    "semantic-release": "15.13.21",
    "tsd-jsdoc": "2.3.1",
    "tslint": "5.18.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-config-standard": "8.0.1",
    "typescript": "3.5.3"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "standard",
      "jsdoc-strict",
      "plugin:promise/recommended",
      "plugin:security/recommended"
    ],
    "plugins": [
      "promise",
      "security"
    ],
    "rules": {
      "no-console": "error",
      "require-await": "error"
    }
  },
  "eslintIgnore": [
    "coverage"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run ts-compile-check && lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "linters": {
      "src/**/*.js": [
        "eslint --fix",
        "prettier-standard",
        "git add"
      ],
      "src/**/*.ts": [
        "tslint --project . --fix",
        "prettier-standard",
        "git add"
      ]
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "renovate": {
    "automerge": "minor",
    "extends": [
      "config:js-lib"
    ]
  },
  "release": {
    "extends": "npm-github-config"
  }
}
